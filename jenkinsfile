pipeline {
    agent any
    stages {
        stage('Clone repository') {
            steps {
                echo 'Cloning repository'
                git branch: 'master', url: ''
            }
        }

        stage('Build container image') {
            steps {
                echo 'Building Docker container image'
                sh "docker build badreads-frontend/. -t makar007/app:$GIT_COMMIT"
            }
        }

        stage('Push container image to registry') {
            steps {
                echo 'Pushing Docker container image to Docker Hub'
                withCredentials([usernamePassword(credentialsId: 'docker-hub-registry', usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]) {
                    sh "echo $PASSWORD | docker login -u $USERNAME --password-stdin"
                    sh "docker push makar007/app:$GIT_COMMIT"
                }
            }
        }

        stage('Update Kubernetes deployment') {
            steps {
                echo 'Updating Kubernetes deployment with new container image that in repo'
                sh "sed -i \"s|image:.*|image: makar007/app:$GIT_COMMIT|g\" kubernetes_manifest_file/deployment_app.yml"
            }
        }

        stage('Deploy app to Kubernetes cluster') {
            steps {
                echo 'Deploy app to Kubernetes cluster'
                script{
                    sh 'kubectl apply -f kubernetes_manifest_file'
                }
            }
        }
    }
}
